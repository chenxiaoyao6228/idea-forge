{
  "name": "@idea/editor",
  "version": "0.1.0",
  "description": "Shared isomorphic TipTap editor package for Idea Forge",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "types": "./src/server.ts",
      "import": "./src/server.ts",
      "default": "./src/server.ts"
    }
  },
  "scripts": {
    "build": "echo 'Build skipped - consumers build from source'",
    "dev": "echo 'No dev needed - consumers build from source'",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@idea/contracts": "workspace:^",
    "@tiptap/core": "^3.7.2",
    "@tiptap/extension-blockquote": "^3.0.0",
    "@tiptap/extension-bold": "^3.0.0",
    "@tiptap/extension-bullet-list": "^3.0.0",
    "@tiptap/extension-code": "^3.0.0",
    "@tiptap/extension-document": "^3.0.0",
    "@tiptap/extension-hard-break": "^3.0.0",
    "@tiptap/extension-heading": "^3.0.0",
    "@tiptap/extension-horizontal-rule": "^3.0.0",
    "@tiptap/extension-image": "^3.0.0",
    "@tiptap/extension-italic": "^3.0.0",
    "@tiptap/extension-link": "^3.0.0",
    "@tiptap/extension-list-item": "^3.0.0",
    "@tiptap/extension-ordered-list": "^3.0.0",
    "@tiptap/extension-paragraph": "^3.0.0",
    "@tiptap/extension-strike": "^3.0.0",
    "@tiptap/extension-subscript": "^3.0.0",
    "@tiptap/extension-superscript": "^3.0.0",
    "@tiptap/extension-table": "^3.0.0",
    "@tiptap/extension-table-cell": "^3.7.2",
    "@tiptap/extension-table-header": "^3.0.0",
    "@tiptap/extension-table-row": "^3.0.0",
    "@tiptap/extension-task-item": "^3.0.0",
    "@tiptap/extension-task-list": "^3.0.0",
    "@tiptap/extension-text": "^3.0.0",
    "@tiptap/extension-underline": "^3.0.0",
    "@tiptap/pm": "^3.7.2",
    "@tiptap/react": "^3.7.2",
    "@tiptap/suggestion": "^3.0.0",
    "highlight.js": "^11.11.1",
    "lodash-es": "^4.17.21",
    "lowlight": "^3.3.0",
    "mdast-util-to-markdown": "^2.1.0",
    "mermaid": "^11.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-directive": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "uuid": "^13.0.0",
    "yjs": "^13.6.18"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "tiptap",
    "prosemirror",
    "editor",
    "markdown",
    "collaborative"
  ],
  "author": "Idea Forge Team",
  "license": "MIT",
  "private": true
}
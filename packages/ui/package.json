{
  "name": "@idea/ui",
  "version": "1.0.0",
  "description": "Shared UI components for Idea Forge",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./shadcn": {
      "types": "./dist/shadcn/index.d.ts",
      "import": "./dist/shadcn/index.js"
    },
    "./shadcn/ui/*": {
      "types": "./dist/shadcn/ui/*.d.ts",
      "import": "./dist/shadcn/ui/*.js"
    },
    "./shadcn/utils": {
      "types": "./dist/shadcn/utils.d.ts",
      "import": "./dist/shadcn/utils.js"
    },
    "./base": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base/index.js"
    },
    "./base/*": {
      "types": "./dist/base/*.d.ts",
      "import": "./dist/base/*.js"
    },
    "./styles": "./dist/styles/index.css",
    "./tailwind.config": "./tailwind.config.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && pnpm build:css",
    "build:css": "node scripts/copy-css.js",
    "dev": "tsc --project tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@idea/utils": "workspace:*",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-hover-card": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.4",
    "@radix-ui/react-navigation-menu": "^1.2.3",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "input-otp": "^1.4.1",
    "lucide-react": "^0.468.0",
    "next-themes": "^0.4.6",
    "sonner": "^1.7.1",
    "spin-delay": "^2.0.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}

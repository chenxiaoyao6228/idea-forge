{
  "name": "@idea/contracts",
  "version": "1.0.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsc -p tsconfig.cjs.json -w --preserveWatchOutput\" \"tsc -p tsconfig.json -w --preserveWatchOutput\"",

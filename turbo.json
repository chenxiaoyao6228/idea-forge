{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "format": {
      "dependsOn": [],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "format:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "check-types": {},
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "env": [
        "DATABASE_URL"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
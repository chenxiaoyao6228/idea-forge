{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "React: debug client",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/apps/client",
      "skipFiles": [
        "${workspaceFolder}/apps/client/node_modules/**/*.js",
        "<node_internals>/**"
      ]
    },
   
    {
      "name": "NestJS: debug server",
      "type": "node",
      "request": "attach",
      "port": 9333,
      "cwd": "${workspaceFolder}/apps/api",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/api/dist/**/*.js"],
      "skipFiles": [
        "${workspaceFolder}/apps/api/node_modules/**/*.js",
        "<node_internals>/**",
        "**/async_hooks.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Fullstack: debug full stack (compound)",
      "configurations": ["NestJS: debug server", "React: debug client"]
    }
  ]
}

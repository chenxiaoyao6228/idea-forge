{
  "name": "idea-forge",
  "version": "0.6.0",
  "description": "Powerful document tool that combines the functionality of Notion with the intelligence of AI",
  "keywords": [
    "notion",
    "tiptap",
    "ai",
    "document",
    "collaborate writing"
  ],
  "author": "YorkChan",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "pinstall": "find client api  -name \"node_modules\" -type d -exec rm -rf {} + && pnpm install --force",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm lefthook install && pnpm -F @idea/api prisma:migrate:deploy",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && pnpm install --force",
    "dev": "pnpm build:contracts && turbo run dev --parallel",
    "dev:api": "pnpm -F @idea/api dev",
    "dev:client": "pnpm -F @idea/client dev",
    "typecheck": "turbo run typecheck",
    "typecheck:api": "pnpm -F @idea/api typecheck",
    "typecheck:client": "pnpm -F @idea/client typecheck",
    "build": "turbo run build",
    "build:client": "pnpm -F @idea/client build",
    "build:api": "pnpm -F @idea/api build",
    "prisma:push": "pnpm -F @idea/api push",
    "prisma:studio": "pnpm -F @idea/api studio",
    "prisma:generate": "pnpm -F @idea/api prisma:generate",
    "migrate:dev": "pnpm -F @idea/api migrate:dev",
    "migrate:deploy": "pnpm -F @idea/api migrate:deploy",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:report": "playwright show-report",
    "removeCache": "find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --write",
    "removeLocks": "find . -name 'pnpm-lock.yaml' -type f -delete",
    "setup": "node scripts/setup-vscode.js && cd ./api && npm run setup",
    "i18n:extract": "cd apps/client && npm run i18n:extract",
    "i18n:translate": "node scripts/i18n/update-translation.js",
    "i18n:process": "pnpm i18n:extract && pnpm i18n:translate",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile",
    "changeset:publish": "changeset publish"
  },
  "dependencies": {
    "utility-types": "^3.11.0",
    "zod": "3.25.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@playwright/test": "^1.55.1",
    "@types/node": "24.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/ui": "^4.0.6",
    "argon2": "^0.31.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "dotenv-flow-cli": "1.1.1",
    "@faker-js/faker": "^9.3.0",
    "imapflow": "^1.0.163",
    "ioredis": "^5.3.2",
    "kill-port-process": "^3.2.1",
    "lefthook": "^1.8.2",
    "mailparser": "^3.6.5",
    "mailslurp-client": "^16.0.0",
    "openai": "^4.78.1",
    "prisma": "6.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.0",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8",
    "vite": "^6.0.1",
    "vitest": "^4.0.6"
  },
  "pnpm": {
    "overrides": {
      "class-validator": ">=0.14.0",
      "class-transformer": ">=0.5.1",
      "validator": ">=13.12.0",
      "minimist": ">=0.2.4",
      "form-data": ">=4.0.4",
      "send": ">=0.19.0",
      "express": ">=5.1.0",
      "cookie": ">=0.7.0",
      "body-parser": ">=1.20.4",
      "tmp": ">=0.2.4",
      "marked": ">=4.0.10",
      "axios": ">=1.12.0",
      "cross-spawn": ">=6.0.6",
      "multer": ">=2.0.2",
      "webpack": ">=5.94.0",
      "esbuild": ">=0.25.0",
      "vite": ">=6.2.0",
      "@nestjs/common": ">=10.4.16",
      "prismjs": ">=1.30.0",
      "mermaid": ">=11.10.0",
      "@tiptap/pm": "3.7.2",
      "@tiptap/core": "3.7.2"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.5.1",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  }
}
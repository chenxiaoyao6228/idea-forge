{
  "name": "idea-forge",
  "version": "0.6.0",
  "description": "Powerful document tool that combines the functionality of Notion with the intelligence of AI",
  "keywords": [
    "notion",
    "tiptap",
    "ai",
    "document",
    "collaborate writing"
  ],
  "author": "YorkChan",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && pnpm install --force",
    "dev": "turbo run dev",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client && npm dev",
    "build": "turbo run build",
    "build:client": "cd client && npm run build",
    "build:api": "cd api && npm run build",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "removeCache": "find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --write",
    "pinstall": "find client api  -name \"node_modules\" -type d -exec rm -rf {} + && pnpm install --force",
    "removeLocks": "find . -name 'pnpm-lock.yaml' -type f -delete",
    "setup": "node scripts/setup-vscode.js && cd ./api && npm run setup",
    "i18n:extract": "cd client && npm run i18n:extract",
    "i18n:translate": "node scripts/i18n/update-translation.js",
    "i18n:process": "pnpm i18n:extract && pnpm i18n:translate",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major",
    "prisma:push": "pnpm -F database push",
    "prisma:studio": "pnpm -F database studio",
    "migrate:dev": "pnpm -F database migrate:dev",
    "migrate:deploy": "pnpm -F database migrate:deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "18.11.18",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^5.0.0",
    "dotenv": "^16.4.5",
    "kill-port-process": "^3.2.1",
    "lefthook": "^1.8.2",
    "openai": "^4.78.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.2",
    "typescript": "^5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.5.1",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "dependencies": {
    "rimraf": "^5.0.0"
  }
}

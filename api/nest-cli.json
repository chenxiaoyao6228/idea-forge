{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src", 
  "compilerOptions": {
    "builder": "webpack",
    "webpackConfigPath": "webpack.config.js",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "_shared/i18n/**/*.json",
        "outDir": "dist/_shared/i18n",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  },
  "watchOptions": {
    "watchExclude": [
      "src/@generated/**/*",
      "src/@generated/*",
      "**/@generated/**/*",
      "**/*.spec.ts"
    ]
  }
}
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler", 
    "sourceMap": true, 
    "noImplicitAny": false,
    "useDefineForClassFields": true, 
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["../api/src/*"],
      "@idea/editor": ["../../packages/editor/src/index.ts"],
      "@idea/editor/*": ["../../packages/editor/src/*"],
      "@idea/icons": ["../../packages/icons/src/index.ts"],
      "@idea/icons/*": ["../../packages/icons/src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.tsx",
    "src/**/*.d.ts",
    "../../packages/editor/src/**/*",
    "../../packages/icons/src/**/*"
  ]
}

  "private": true,
  "scripts": {
    "postinstall": "npm run prisma:generate",
    "prisma:generate": "rimraf prisma-type-generated && npx prisma generate && node scripts/generate-prisma-types.js",
    "prisma:push": "npx prisma db push",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate:dev": "npx prisma migrate dev && npm run prisma:generate && npm run prisma:seed",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:seed": "npx prisma db seed",
    "prisma:seed:reset": "npx prisma migrate reset --force && npx prisma db seed",
    "prisma:seed:dev": "dotenv-flow -p . -- npx prisma db seed",
    "dev": "npm run dev:docker && nodemon",
    "dev:fast": "NODE_ENV=development DEBUG=true dotenv-flow -p . -- webpack --config webpack.config.js --watch",
    "dev:docker": "chmod +x scripts/start-docker.sh && sh ./scripts/start-docker.sh",
    "start:debug": "NODE_ENV=development dotenv-flow -p . -- nest start --debug 9333 --watch --preserveWatchOutput",
    "dev:studio": "concurrently \"npm run start:debug\"",
    "email:dev": "email preview ./src/_shared/email/templates",
    "build": "NODE_ENV=production webpack --config webpack.config.js",
    "start:prod": "NODE_ENV=production dotenv-flow -p . -- node dist/main",
    "start:pm2": "dotenv-flow -p . -- pm2 start ecosystem.config.js --env production --no-daemon",
    "start": "NODE_ENV=production dotenv-flow -p . -- nest start",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "format": "biome format . ",
    "format:fix": "biome format --write .",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:int": "vitest run --config vitest.int.config.ts",
    "test:int:watch": "vitest --watch --config vitest.int.config.ts",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "setup": "chmod +x scripts/start-docker.sh && chmod +x ./scripts/setup.sh  && ./scripts/setup.sh"
  },
